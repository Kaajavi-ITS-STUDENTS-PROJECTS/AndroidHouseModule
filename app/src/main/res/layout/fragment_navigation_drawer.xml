<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:dividerHeight="0dp"
    android:background="@color/switch_thumb_normal_material_light" tools:context=".NavigationDrawerFragment"
    android:weightSum="100"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/profile_imageview"
        android:background="@color/material_blue_grey_800"
        android:layout_gravity="top"
        android:layout_weight="60"
        android:orientation="vertical"
        android:weightSum="100">

        <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/webview_profile" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="40">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/options_listview"
            android:layout_gravity="top"
            android:layout_weight="50"
            android:background="#000000"
            android:layout_above="@+id/alarm_button" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alarm"
            android:id="@+id/alarm_button"
            android:layout_weight="60"
            android:textAlignment="gravity"
            android:background="#B71C1C"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</LinearLayout>
