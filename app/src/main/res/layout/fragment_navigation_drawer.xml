<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:dividerHeight="0dp"
    android:background="@color/switch_thumb_normal_material_light" tools:context=".NavigationDrawerFragment"
    android:weightSum="100"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/profile_imageview"
        android:background="@color/material_blue_grey_800"
        android:layout_gravity="bottom"
        android:layout_weight="60"
        android:orientation="vertical"
        android:weightSum="100">

        <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/webview_profile" />
    </LinearLayout>



    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/options_listview"
        android:layout_gravity="top"
        android:layout_weight="30"
        android:background="#000000"/>
</LinearLayout>
